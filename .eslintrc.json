{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "max-len": ["warn", { "code": 120, "ignoreUrls": true }],
    "object-shorthand": "error",
    "prefer-template": "error",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  },
  "ignorePatterns": ["node_modules/", ".next/", "dist/", "build/", "cypress/", "server/"]
}
