{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "max-len": ["warn", { "code": 100, "ignoreUrls": true }],
    "object-shorthand": "error",
    "prefer-template": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "dist/",
    "build/",
    "cypress/"
  ]
}